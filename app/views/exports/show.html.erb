<%- model_class = Export -%>
<div class="page-header">
  <h1><%=t '.title', :default => Export %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:market) %></dt>
      <dd><pre class="prettyprint"><%= @export.market %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:export_amount) %></dt>
      <dd><pre class="prettyprint"><%= @export.export_amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @export.notes %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              exports_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_export_path(@export), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              export_path(@export),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

